---
import HeaderLink from './HeaderLink.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const tagCounts: { [key: string]: number } = posts.reduce((counts: { [key: string]: number }, post) => {
	const tag = (post.data as any).category || 'general';
	counts[tag] = (counts[tag] || 0) + 1;
	return counts;
}, {});

const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
---

<header style="position: sticky; top: 0; z-index: 100; background-color: white;">
	<nav>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="search-container">
			<form action="/" method="get" onsubmit="return false;">
				<input type="text" name="q" id="search-input" placeholder="Search posts..." />
			</form>
		</div>
		
	</nav>
	<nav class="tag-nav">
		{sortedTags.map(([tag, count]) => (
			<a href={`/tags/${tag}`}>{tag} ({count})</a>
		))}
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(100, 116, 139);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--text-color);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.search-container {
		flex-grow: 1;
		margin: 0 1.5em;
	}
	#search-input {
		width: 100%;
		padding: 0.6em 0.8em;
		border-radius: 8px;
		border: 1px solid #ddd;
		transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
	}
	#search-input:focus {
		border-color: #aaa;
		box-shadow: 0 0 5px rgba(0,0,0,0.1);
		outline: none;
	}
	.tag-nav {
		display: flex;
		justify-content: center;
		padding: 0.5em 1em;
		background: #f9f9f9;
	}
	.tag-nav a {
		margin: 0 0.5em;
		padding: 0.25em 0.5em;
		border-radius: 4px;
		background: #eee;
		color: #333;
		text-decoration: none;
		font-size: 0.9em;
	}
</style>
