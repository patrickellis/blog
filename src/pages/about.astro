<style>
	.about-container {
		display: flex;
		gap: 2em;
	}
	.about-sidebar {
		flex: 0 0 20%;
	}
	.about-sidebar h1 {
		font-size: 1.8rem;
		margin-bottom: 0.5em;
	}
	.about-sidebar .subheading {
		font-size: 0.9rem;
		color: #666;
	}
	.about-main {
		flex: 1;
	}
	.about-main h2 {
		font-size: 1.5rem;
	}
	.about-main h3 {
		font-size: 1.2rem;
	}
	.resume .job {
		display: flex;
		gap: 1.5em;
		margin-bottom: 2em;
	}
	.resume .job-date {
		flex: 0 0 20%;
		font-variant: small-caps;
		font-weight: 600;
		color: #444;
		position: relative;
		padding: 0.5em 0;
	}
	.resume .job-date::before {
		content: '';
		position: absolute;
		left: 50%;
		top: 0.4rem;
		height: 95%;
		width: 2px;
		background-color: #ccc;
		transform: translateX(-800%) translateY(23%);
	}
	.job:first-child .job-date::before {
		height: calc(100%) !important; /* Adjust height to connect properly */
		top: 6em !important; /* Move the line down */
	}
	.job:last-of-type .job-date::before {
		content: none !important; 
	}
	.job-date:last-child {
		display: none !important;
	}
	.resume .job-details {
		flex: 1;
	}
	.resume .job-details h3 {
		margin-top: 0;
		margin-bottom: 0.5em;
	}
	.resume .skills {
		margin-top: 1em;
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
	}
	.skill-tag {
		background-color: #f0f0f0; /* Light grey */
		color: #333; /* Dark grey */
		padding: 0.3em 0.8em;
		border-radius: 4px;
		font-size: 0.8em;
		font-weight: 600;
		border: 1px solid #ccc;
	}

	@media (max-width: 992px) {
		.about-container {
			flex-direction: column;
		}
	}
</style>

